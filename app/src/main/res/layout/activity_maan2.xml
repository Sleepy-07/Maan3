<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maan2">

    <ImageView
        android:id="@+id/ivrocket"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/rocket"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/sta"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@id/ivrocket"
        android:src="@drawable/satellite"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/rover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/space_car"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/ivrocket"
        android:layout_marginStart="50dp"
        android:contentDescription="@string/todo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivrocket"
        android:layout_marginStart="-48dp"
        android:layout_marginBottom="-38dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/ivrocket"
        android:text="Flight"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sta"
        android:layout_marginStart="-200dp"
        android:layout_marginBottom="-38dp"
        android:layout_toEndOf="@id/ivrocket"
        android:text="Space Station"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rover"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="-38dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/ivrocket"
        android:text="Rover"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="143dp"
        android:layout_height="87dp"
        android:layout_alignBottom="@id/sta"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-22dp"
        android:layout_marginBottom="-172dp"
        android:layout_toStartOf="@id/Center"
        android:background="@color/orange"
        android:paddingTop="20dp"
        android:text="DCA"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="143dp"
        android:layout_height="87dp"
        android:layout_alignBottom="@id/rover"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="-172dp"
        android:layout_toEndOf="@id/Center"
        android:background="@color/blue"
        android:paddingTop="20dp"
        android:text="MARS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <ImageView

        android:layout_width="141dp"
        android:id="@+id/Center"
        android:layout_height="80dp"
       android:src="@drawable/back"
        android:layout_alignBottom="@id/ivrocket"
        android:layout_marginBottom="-168dp"
        android:layout_centerInParent="true"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

    <ImageView
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_marginEnd="-156dp"
        android:layout_toStartOf="@id/Center"
        android:src="@drawable/back_arrow"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-150dp"
        android:layout_alignBottom="@id/ivrocket"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

    <ImageView
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_marginStart="-154dp"
        android:layout_toEndOf="@id/Center"
        android:src="@drawable/forward_arrow"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-172dp"
        android:layout_alignBottom="@id/ivrocket"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />


    <TextView
        android:id="@+id/OneWay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Center"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-144dp"
        android:background="@color/bright_red"
        android:paddingStart="5dp"
        android:text="One Way"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/Center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-144dp"
        android:layout_toEndOf="@+id/OneWay"
        android:background="@color/bright_red"
        android:paddingStart="10dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/OneWay"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-123dp"
        android:background="@color/turquoise"
        android:paddingStart="5dp"
        android:text="Traveller"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


</RelativeLayout>